@page
@model IndexModel
@{
    ViewData["Title"] = "Nkateko Barber Shop";
}

<style>
    body {
        margin: 0;
        background-color: #0f0f0f;
        color: #e5e5e5;
        font-family: 'Segoe UI', sans-serif;
    }

    /* HERO SECTION */
    html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
    background-color: #0f0f0f;
}

/* FULL SCREEN HERO */
.hero {
    position: relative;
    width: 100vw;      /* full screen width */
    height: 100vh;     /* full screen height */
    margin: 0;
    padding: 0;

    background-image: 
        linear-gradient(rgba(0,0,0,0.75), rgba(0,0,0,0.75)),
        url('https://images.unsplash.com/photo-1517832606299-7ae9b720a186');

    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;

    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.hero-content {
    color: white;
}
    

    .btn-main {
        background-color: #ece6e6;
        border: none;
        padding: 12px 30px;
        color: black;
        font-weight: 600;
        margin-top: 20px;
        transition: 0.3s ease;
    }

    .btn-main:hover {
        background-color: #f1c94c;
        transform: translateY(-3px);
    }

    /* SERVICES */
    .section {
        padding: 80px 0;
    }

    .service-card {
        background-color: #1a1a1a;
        border: 1px solid #2a2a2a;
        padding: 25px;
        text-align: center;
        transition: 0.3s;
    }

    .service-card:hover {
        background-color: #222;
        transform: translateY(-5px);
    }

    footer {
        background-color: #000;
        padding: 20px;
        text-align: center;
        color: #777;
    }
</style>

<!-- HERO -->
<section class="hero">
    <div class="hero-content">
        <h1>Nkateko Barber Shop</h1>
        <p>Precision. Style. Confidence.</p>
        <a href="/Booking" class="btn btn-main">Book Appointment</a>
    </div>
</section>

<!-- SERVICES -->
<section class="section container">
    <h2 class="text-center mb-5">Our Services</h2>

    <div class="row g-4">
        @foreach (var service in Model.Services)
        {
            <div class="col-md-4">
                <div class="service-card">
                    <h5>@service.Name</h5>
                    <p>R @service.Price</p>
                </div>
            </div>
        }
    </div>
</section>

<!-- CTA -->
<section class="section text-center">
    <h3>Ready for a fresh cut?</h3>
    <a href="/Booking" class="btn btn-main">Book Now</a>
</section>

<footer>
    © 2026 Nkateko Barber Shop — Johannesburg
</footer>